{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc build active file",
            "command": "/opt/homebrew/bin/arm-none-eabi-gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        // New task for building the CAN test executable
        {
            "label": "Build CAN Test",
            "type": "shell",
            "command": "make",
            "args": [
                "Build CAN Test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Test"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to build the CAN test executable."
        }
    ],
    "version": "2.0.0"
}
